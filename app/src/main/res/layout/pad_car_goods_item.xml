<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/pad_car_item_liny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:textSize="@dimen/ac_text_size_16"
            android:id="@+id/car_list_item_xh_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="序号"
            android:textColor="@color/col_333" />
        <TextView
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/ac_text_size_16"
            android:id="@+id/car_list_item_goodsname_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:gravity="center_horizontal"
            android:text="商品名"
            android:textColor="@color/col_333" />
        <TextView
            android:textSize="@dimen/ac_text_size_16"
            android:id="@+id/car_list_item_number_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="数量"
            android:textColor="@color/col_333" />
        <TextView
            android:textSize="@dimen/ac_text_size_16"
            android:gravity="center_horizontal"
            android:id="@+id/car_list_item_unit_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="单位"
            android:textColor="@color/col_333" />
        <TextView
            android:textSize="@dimen/ac_text_size_16"
            android:id="@+id/car_list_item_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="单价"
            android:textColor="@color/col_333" />

        <TextView
            android:textSize="@dimen/ac_text_size_16"
            android:id="@+id/car_list_item_total_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:text="金额"
            android:textColor="@color/col_333" />
    </LinearLayout>
</LinearLayout>

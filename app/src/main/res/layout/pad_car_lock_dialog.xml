<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#EA3800"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_margin="30dp"
        android:padding="20dp"
        android:background="#EA3800"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/ac_text_size_24"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:id="@+id/pad_car_update_dialog_title"
            android:text="目前属于锁屏状态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_margin="20dp"
            android:padding="30dp"
            android:background="@drawable/white_round_shap"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="@dimen/ac_text_size_24"
                android:textColor="@color/col_333"
                android:text="请输入解锁屏密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/pad_car_lock_input_psd_tv"
                android:textSize="@dimen/ac_text_size_18"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:ems="20"
                android:hint=""
                android:background="@drawable/pad_login_input_shap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/pad_car_lock_cancel_tv"
                    android:layout_marginRight="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="@dimen/ac_text_size_24"
                    android:text="注销"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:background="#EA3800"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/pad_car_unlock_cancel_tv"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/ac_text_size_24"
                    android:text="确认解锁"
                    android:textColor="@color/white"
                    android:background="@color/qblue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>

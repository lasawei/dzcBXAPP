<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/white_gray_selector"
        android:id="@+id/home_bill_item_liny"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:visibility="visible"
            android:id="@+id/main_bill_item_iv"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/loading_img"
            android:layout_width="@dimen/goods_img_size"
            android:layout_height="@dimen/goods_img_size"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>
        <RelativeLayout
            android:layout_toRightOf="@+id/main_bill_item_iv"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/bill_item_type_rely"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/main_bill_item_name"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text="新鲜上市菠菜"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="3dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"
                        android:id="@+id/bill_item_info_select_mode"
                        android:textColor="@color/qblue"
                        android:textSize="@dimen/ac_text_size_14"
                        android:text="选规格"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/qblue"
                        android:id="@+id/bill_item_info_s"
                        android:visibility="visible"
                        android:layout_gravity="center_vertical"
                        android:text="|"
                        android:textSize="@dimen/ac_text_size_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginRight="5dp"
                        android:id="@+id/main_bill_item_del_iv"
                        android:src="@mipmap/del_bill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                </RelativeLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/bill_item_type_rely"
            android:id="@+id/bill_item_list_rely"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/bill_item_market_tv"
                android:textColor="@color/col_333"
                android:text="￥20.00/框"
                android:visibility="visible"
                android:textSize="@dimen/ac_text_size_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/type_info_down_img"
                    android:src="@mipmap/down_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/bill_item_shopprice_tv"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/ac_text_size_16"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/type_info_down_img" />
                <TextView
                    android:id="@+id/bill_item_model_tv"
                    android:layout_toRightOf="@+id/bill_item_shopprice_tv"
                    android:layout_centerVertical="true"
                    android:textColor="@color/col_999"
                    android:textSize="@dimen/ac_text_size_12"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:id="@+id/bill_item_info_add"
                    android:src="@mipmap/add_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/bill_item_shopprice_tv"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:id="@+id/bill_item_more_model_lin"
                android:layout_below="@+id/bill_item_list_rely"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_below="@+id/main_bill_item_name"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_bg" />
                <android.support.v7.widget.RecyclerView
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:scrollbars="none"
                    android:id="@+id/bill_item_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_below="@+id/main_bill_item_name"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />
</LinearLayout>

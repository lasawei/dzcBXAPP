<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context="com.bixian365.dzc.fragment.my.store.AccManageActivity">

    <RelativeLayout
        android:background="@drawable/my_title_bg_shap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/all_title_goback_linlay"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/all_title_back_tv"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/white_arrow" />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:paddingLeft="40dip"
            android:paddingRight="40dip"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:id="@+id/all_title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的钱包"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <com.bixian365.dzc.utils.view.SwipyRefreshLayout
    android:id="@+id/walle_swipe_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <ScrollView
        android:id="@+id/wallet_scrollv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    android:visibility="gone"
                    layout="@layout/layout_no_info"/>
                <RelativeLayout
                    android:background="@drawable/my_title_bg_shap"
                    android:visibility="visible"
                    android:id="@+id/acc_manage_info_lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <RelativeLayout
                        android:paddingTop="15dp"
                        android:paddingBottom="20dp"
                        android:id="@+id/store_my_rechange_rely"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/acc_manage_headimg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                >
                                <TextView
                                    android:id="@+id/wallet_name_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="账号余额(元)"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/ac_text_size_12"/>
                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:layout_below="@+id/wallet_name_tv"
                                    android:layout_centerHorizontal="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="¥"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/ac_text_size_24"/>
                                    <TextView
                                        android:id="@+id/wallet_total_amt_tv"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0.00"
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/ac_text_size_24"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/store_my_tx_liny"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/white_gray_selector"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/wallet_tx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="提现"
                        android:textSize="@dimen/ac_text_size_16"
                        android:textColor="@color/col_333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/store_my_cz_liny"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/white_gray_selector"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/wallet_cz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/ac_text_size_16"
                        android:gravity="center"
                        android:text="充值"
                        android:textColor="@color/col_333"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:visibility="gone"
                android:id="@+id/wallet_counp_liny"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/wallet_yhj_rel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_gray_selector"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠券"
                        android:textColor="@color/col_333"
                        android:textSize="@dimen/ac_text_size_14"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="查看全部"
                            android:textColor="@color/col_999"
                            android:textSize="@dimen/ac_text_size_14"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/arrow_right"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_bg"
                    android:visibility="visible"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/wallet_no_use_lin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/white_gray_selector"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:src="@mipmap/yhj_no_use"/>

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/wallet_coupons_may_tv"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="right"
                                android:background="@drawable/my_msg_shap"
                                android:gravity="center_horizontal|center_vertical"
                                android:padding="2dp"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/ac_text_size_12"
                                android:textStyle="bold"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="未使用"
                            android:textColor="@color/col_333"
                            android:textSize="@dimen/ac_text_size_12"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wallet_use_lin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/white_gray_selector"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:src="@mipmap/yhj_use"/>

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/wallet_coupons_no_tv"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="right"
                                android:background="@drawable/my_msg_shap"
                                android:gravity="center_horizontal|center_vertical"
                                android:padding="2dp"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/ac_text_size_12"
                                android:textStyle="bold"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="已使用"
                            android:textColor="@color/col_333"
                            android:textSize="@dimen/ac_text_size_12"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/wallet_used_lin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/white_gray_selector"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:src="@mipmap/yhj_used"/>

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/wallet_coupons_used_tv"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="right"
                                android:background="@drawable/my_msg_shap"
                                android:gravity="center_horizontal|center_vertical"
                                android:padding="2dp"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/ac_text_size_12"
                                android:textStyle="bold"/>
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="已过期"
                            android:textColor="@color/col_333"
                            android:textSize="@dimen/ac_text_size_12"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/wallet_bank_card_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/wallet_my_bank_rel"
                    android:background="@drawable/white_gray_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的银行卡"
                        android:textColor="@color/col_333"
                        android:textSize="@dimen/ac_text_size_14"/>

                    <ImageView
                        android:id="@+id/wallet_mybank_arrow_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:background="@mipmap/arrow_down"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_bg"
                    android:visibility="visible"/>

                <LinearLayout
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/wallet_default_bank_lin"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/default_bank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/col_999"
                            android:textSize="@dimen/ac_text_size_14"
                            android:text="未绑定银行卡"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <com.bixian365.dzc.utils.view.MyGridView
                        android:id="@+id/wallet_bank_gridv"
                        android:listSelector="@null"
                        android:numColumns="1"
                        android:stretchMode="columnWidth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:divider="#00000000"
                        android:layout_marginBottom="10dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_bg"
                        android:visibility="visible"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/wallet_add_bank_rel"
                    android:background="@drawable/white_gray_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加银行卡"
                        android:textColor="@color/col_333"
                        android:textSize="@dimen/ac_text_size_14"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:src="@mipmap/arrow_right"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:background="@drawable/white_gray_selector"
                android:id="@+id/wallet_sr_detail_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收入明细"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_14"/>
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看更多"
                        android:textColor="@color/col_999"
                        android:textSize="@dimen/ac_text_size_14"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@mipmap/arrow_right"/>
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_bg"
                android:visibility="visible"/>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/default_res"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="暂无信息"
                        android:textColor="@color/col_888"
                        android:textSize="@dimen/ac_text_size_14"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:id="@+id/wallet_srdetail_lin"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:scrollbars="none"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:numColumns="1"
                        android:stretchMode="columnWidth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:divider="@color/line_bg"
                        android:dividerHeight="1dp"
                        />
                    <com.bixian365.dzc.utils.view.MyGridView
                        android:id="@+id/wallet_srdetail_gridv"
                        android:listSelector="@null"
                        android:numColumns="1"
                        android:stretchMode="columnWidth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:divider="#00000000"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</com.bixian365.dzc.utils.view.SwipyRefreshLayout>
    </LinearLayout>

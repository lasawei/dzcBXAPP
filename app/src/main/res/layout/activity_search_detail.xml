<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical"
              >


    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/main_search_rels"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/search_detail_goback_linlay"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/all_title_back_tv"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/back_arrow" />
        </LinearLayout>
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/search_detail_goback_linlay"
            android:layout_toLeftOf="@+id/main_message_ivs"
            android:background="@drawable/search_bg_gray_shap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:drawablePadding="5dp"
                android:textColorHint="@color/col_hint"
                android:hint="请输入要购买的商品名称"
                android:drawableLeft="@mipmap/search_blue_img"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textCursorDrawable="@null"
                android:maxLength="20"
                android:textColor="@color/col_333"
                android:textSize="@dimen/ac_text_size_14"
                android:id="@+id/search_detail_editv"
                android:padding="8dp"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <ImageView
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:id="@+id/main_message_ivs"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
        android:id="@+id/main_goods_type_item_bv"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_above="@+id/search_detail_bottom_rel"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.bixian365.dzc.utils.view.SwipyRefreshLayout
                android:id="@+id/search_detail_swipyrefreshlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <android.support.v7.widget.RecyclerView
                    android:scrollbars="none"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:id="@+id/search_detail_recycler"
                    android:listSelector="@null"
                    android:numColumns="1"
                    android:stretchMode="columnWidth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:divider="#00000000"
                    />
            </com.bixian365.dzc.utils.view.SwipyRefreshLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:id="@+id/wallet_default_search_lin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/default_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="@color/col_999"
                android:textSize="@dimen/ac_text_size_14"
                android:text="未查询到相关商品"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <!--底部购物车 ====================-->
        <RelativeLayout
            android:id="@+id/search_detail_bottom_rel"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_bg" />
            <FrameLayout
                android:paddingLeft="5dp"
                android:layout_centerVertical="true"
                android:id="@+id/goods_detial_car_num_liny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="5dp"
                    android:src="@mipmap/car_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:visibility="visible"
                    android:id="@+id/goods_detail_car_num_tv"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_gravity="right|center_horizontal"
                    android:background="@color/transparent"
                    android:textColor="@color/transparent"
                    android:text=" "
                    android:textSize="@dimen/ac_text_size_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
            <LinearLayout
                android:layout_toRightOf="@+id/goods_detial_car_num_liny"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_16"
                    android:text="合计："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/goods_detail_car_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥0.00"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/ac_text_size_16"
                    android:textStyle="bold"/>

                <TextView
                    android:textColor="@color/col_999"
                    android:textSize="@dimen/ac_text_size_16"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/goods_detail_gocar_btn"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_alignParentRight="true"
                android:background="@color/orange"
                android:textSize="@dimen/ac_text_size_16"
                android:textColor="@color/white"
                android:text="去购物车"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <FrameLayout
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/search_goods_detial_car_num_liny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/main_tab_car_ck_img"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:visibility="visible"
                android:id="@+id/search_goods_detail_car_num_tv"
                android:layout_gravity="right"
                android:gravity="center"
                android:background="@color/transparent"
                android:textColor="@color/transparent"
                android:text=""
                android:textSize="@dimen/ac_text_size_12"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>
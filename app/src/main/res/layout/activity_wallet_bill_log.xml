<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context="com.bixian365.dzc.fragment.my.store.yhj.YHJActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/all_title_layout"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:background="@color/app_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.bixian365.dzc.utils.view.SwipyRefreshLayout
            android:id="@+id/wallet_log_swipe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
        <android.support.v7.widget.RecyclerView
            android:scrollbars="none"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:id="@+id/wallet_log_recyclerv"
            android:numColumns="1"
            android:stretchMode="columnWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@color/line_bg"
            android:dividerHeight="1dp"
            />
        </com.bixian365.dzc.utils.view.SwipyRefreshLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        android:id="@+id/wallet_log_nodata_lin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/default_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="center_horizontal"
            android:textColor="@color/col_999"
            android:textSize="@dimen/ac_text_size_14"
            android:text="未查询到相关明细"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
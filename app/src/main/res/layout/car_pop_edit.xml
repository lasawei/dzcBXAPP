<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/car_popu_lay"
        android:layout_alignParentBottom="true"
        android:background="@color/line_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/car_pop_input_num_tv"
                    android:padding="15dp"
                    android:textColor="@color/col_333"
                    android:background="@color/transparent"
                    android:hint="请输入所需数量"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/car_pop_input_del_tv"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/input_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:background="@color/line_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/car_input_num_tv1"
                    android:background="@color/white"
                    android:padding="@dimen/car_keybord_num_height"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_20"
                    android:text="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/car_input_num_tv2"
                    android:layout_marginLeft="1dp"
                    android:padding="@dimen/car_keybord_num_height"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_20"
                    android:text="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/car_input_num_tv3"
                    android:layout_marginLeft="1dp"
                    android:padding="@dimen/car_keybord_num_height"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_20"
                    android:text="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:background="@color/line_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/car_input_num_tv4"
                    android:background="@color/white"
                    android:padding="@dimen/car_keybord_num_height"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_20"
                    android:text="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/car_input_num_tv5"
                    android:layout_marginLeft="1dp"
                    android:padding="@dimen/car_keybord_num_height"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_20"
                    android:text="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/car_input_num_tv6"
                    android:layout_marginLeft="1dp"
                    android:padding="@dimen/car_keybord_num_height"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_20"
                    android:text="6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:background="@color/line_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/car_input_num_tv7"
                    android:background="@color/white"
                    android:padding="@dimen/car_keybord_num_height"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_20"
                    android:text="7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/car_input_num_tv8"
                    android:layout_marginLeft="1dp"
                    android:padding="@dimen/car_keybord_num_height"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_20"
                    android:text="8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/car_input_num_tv9"
                    android:layout_marginLeft="1dp"
                    android:padding="@dimen/car_keybord_num_height"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_20"
                    android:text="9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:background="@color/line_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/car_input_num_cancel_tv"
                    android:background="@color/white"
                    android:padding="@dimen/car_keybord_num_height"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_20"
                    android:text="取消"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/car_input_num_tv0"
                    android:layout_marginLeft="1dp"
                    android:padding="@dimen/car_keybord_num_height"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_20"
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/car_input_num_confrim_tv"
                    android:layout_marginLeft="1dp"
                    android:padding="@dimen/car_keybord_num_height"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textColor="@color/col_333"
                    android:textSize="@dimen/ac_text_size_20"
                    android:text="确定"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

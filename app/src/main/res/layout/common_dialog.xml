<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ui_dialog_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_round_shap"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/dialog_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dialog_title_333"
            android:text="温馨提示"
            android:layout_centerInParent="true"
            android:textSize="@dimen/ac_text_size_16" />
        <ImageView
            android:visibility="gone"
            android:gravity="center_vertical"
            android:id="@+id/dialog_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/diaog_close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:visibility="gone"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/add_bank_dialog_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />
    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:visibility="gone"
            android:id="@+id/add_bank_dialog_iv"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_gravity="left"
            android:gravity="left"
            android:id="@+id/dialog_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdfsdf"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/dialog_title_333"
            android:textSize="@dimen/ac_text_size_14" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg" />
    <LinearLayout
        android:background="@drawable/white_gray_bottom_round_selector"
        android:id="@+id/dialog_liny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/line_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@color/white"
                android:padding="15dp"
                android:visibility="visible"
                android:id="@+id/dialog_left_btn"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="取消"
                android:textSize="@dimen/ac_text_size_16"
                android:textColor="@color/qblue"
                android:layout_centerInParent="true"
                />
            <TextView
                android:layout_marginLeft="1dp"
                android:background="@color/white"
                android:padding="15dp"
                android:id="@+id/dialog_right_btn"
                android:visibility="visible"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="确定"
                android:textSize="@dimen/ac_text_size_16"
                android:textColor="@color/qblue"
                android:layout_centerInParent="true"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>













<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/se_disp_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:visibility="gone"
                android:textColor="@color/red"
                android:text="dsfsdfds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/pad_fp_img"
                android:scaleType="fitXY"
                android:src="@mipmap/pad_start111"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/main_banner_lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.youth.banner.Banner
                android:id="@+id/pad_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:indicator_height="8dp"
                app:indicator_margin="5dp"
                app:indicator_width="8dp"
                app:title_background="#a0000000"
                app:title_height="40dp"
                >
            </com.youth.banner.Banner>
        </RelativeLayout>

        <ImageView
            android:visibility="gone"
            android:src="@mipmap/pad_pay_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:src="@mipmap/start_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/start_guide_linlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context="com.bixian365.dzc.fragment.my.store.yhj.YHJActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/all_title_layout"
            />
    </LinearLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:scrollbars="none"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:id="@+id/address_list_recyclerv"
                    android:numColumns="1"
                    android:stretchMode="columnWidth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:divider="@color/line_bg"
                    android:dividerHeight="1dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:id="@+id/address_default_lin"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/default_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/col_999"
                    android:textSize="@dimen/ac_text_size_14"
                    android:text="未查询到相关商品"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <Button
                android:visibility="gone"
                android:id="@+id/address_list_add_btn"
                android:textSize="@dimen/ac_text_size_18"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:textColor="@color/white"
                android:text="新增"
                android:background="@drawable/login_button_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/white_gray_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/cg_order_detail_iv"
            android:layout_width="@dimen/goods_img_info_size"
            android:layout_height="@dimen/goods_img_info_size"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/img_gdy" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/cg_order_detail_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cg_order_goodsname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新鲜上市的黄豆芽"
                android:textColor="@color/col_333"
                android:textSize="@dimen/ac_text_size_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/cg_order_detail_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/col_999"
                    android:textSize="@dimen/ac_text_size_14" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/cg_order_detail_shopprice_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text=""
                    android:textColor="@color/col_999"
                    android:textSize="@dimen/ac_text_size_14" />
            </LinearLayout>
            <TextView
                android:paddingTop="5dp"
                android:id="@+id/cg_order_detail_total_tv"
                android:textSize="@dimen/ac_text_size_14"
                android:textColor="@color/col_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg" />
</LinearLayout>

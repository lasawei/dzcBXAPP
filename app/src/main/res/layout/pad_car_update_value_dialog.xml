<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_margin="30dp"
    android:padding="20dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/ac_text_size_18"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/col_333"
        android:id="@+id/pad_car_update_dialog_title"
        android:text="请输入商品价格"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:digits="0123456789."
        android:textSize="@dimen/ac_text_size_18"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:ems="20"
        android:hint="请输入商品参数"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/pad_login_input_shap"
        android:id="@+id/pad_car_update_dialog_edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

</LinearLayout>

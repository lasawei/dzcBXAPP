<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/ac_text_size_24"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/col_333"
            android:id="@+id/pad_car_update_dialog_title"
            android:text="请输入修改商品信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_margin="10dp"
            android:padding="20dp"
            android:background="@drawable/white_round_shap"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/ac_text_size_24"
                    android:textColor="@color/col_333"
                    android:text="商品名称："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:inputType="number"
                    android:digits="1234567890."
                    android:id="@+id/pad_sale_update_goodsname_edt"
                    android:textSize="@dimen/ac_text_size_24"
                    android:padding="15dp"
                    android:hint="请输入商品名称"
                    android:background="@drawable/pad_login_input_shap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/ac_text_size_24"
                    android:textColor="@color/col_333"
                    android:text="商品价格："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:inputType="number"
                    android:digits="1234567890."
                    android:id="@+id/pad_sale_update_goodsprice_edt"
                    android:textSize="@dimen/ac_text_size_24"
                    android:padding="15dp"
                    android:hint="请输入商品价格"
                    android:background="@drawable/pad_login_input_shap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/pad_sale_cancel_tv"
                    android:layout_marginRight="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="@dimen/ac_text_size_24"
                    android:text="取消"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:background="#EA3800"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/pad_sale_update_tv"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/ac_text_size_24"
                    android:text="修改"
                    android:textColor="@color/white"
                    android:background="@color/qblue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
